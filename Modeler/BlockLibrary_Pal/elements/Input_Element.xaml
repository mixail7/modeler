<UserControl x:Class="BlockLibrary_Pal.Input_Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:DiagramDesigner.Controls;assembly=DiagramDesigner"
             xmlns:controls="clr-namespace:DiagramDesigner.Controls;assembly=Modeler" mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="150">
  <Grid>
    <Viewbox 
      Margin="4"  
      Stretch="Fill"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      Height="Auto"  Width="Auto">
      <Path Stroke="{Binding BorderBrush}" Name="MainBorder">
        <Path.Data>M 10,0 L 60 0 L 50,40 L 0,40 Z</Path.Data>
      </Path>
    </Viewbox>
    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Path=TextValue}"></TextBlock>
    <controls:DragThumb></controls:DragThumb>
  </Grid>
</UserControl>
