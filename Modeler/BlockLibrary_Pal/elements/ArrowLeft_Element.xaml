<UserControl x:Class="BlockLibrary_Pal.ArrowLeft_Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:DiagramDesigner.Controls;assembly=DiagramDesigner"
             xmlns:controls="clr-namespace:DiagramDesigner.Controls;assembly=Modeler" mc:Ignorable="d" 
              d:DesignHeight="150" d:DesignWidth="150">
  <Grid>
    <Viewbox 
      Margin="4"  
      Stretch="Fill"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      Height="Auto"  Width="Auto">
      <Path Name="MainBorder" Stroke="{Binding BorderBrush}" Height="30" Width="40">
        <Path.Data>M 0,15 L 10,5 L 10,10 L 40,10 L 40, 20 L 10,20 L 10,25 L 0,15 Z</Path.Data>
      </Path>
    </Viewbox>
    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Path=TextValue}">

    </TextBlock>
    <controls:DragThumb></controls:DragThumb>
  </Grid>
</UserControl>
