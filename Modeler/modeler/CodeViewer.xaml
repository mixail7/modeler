<Window x:Class="Modeler.modeler.CodeViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syntaxHighlightBox="clr-namespace:AurelienRibon.Ui.SyntaxHighlightBox;assembly=AurelienRibon.Ui.SyntaxHighlightBox"
        Title="CodeViewer" Height="600" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Name="PropertyField" VerticalAlignment="Stretch">
            <syntaxHighlightBox:SyntaxHighlightBox IsLineNumbersMarginVisible="True" Name="Code" FontSize="14"/>
        </ScrollViewer>
    </Grid>
</Window>
