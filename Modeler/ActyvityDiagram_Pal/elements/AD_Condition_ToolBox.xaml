<UserControl x:Class="ActyvityDiagram_Pal.AD_Condition_ToolBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:DiagramDesigner.Controls;assembly=DiagramDesigner" mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
  <Grid Margin="2,20,2,20" MouseMove="Grid_MouseMove" MouseDown="Grid_MouseDown">
    <Rectangle Fill="Transparent" ></Rectangle>
    <Viewbox 
      Margin="4"  
      Stretch="Fill"
      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      Height="Auto"  Width="Auto">            
                <Path Stroke="Black">
        <Path.Data>M 0,20 L 30 0 L 60,20 L 30,40 Z</Path.Data>
      </Path>
    </Viewbox>
    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">Condition</TextBlock>    
  </Grid>
</UserControl>
