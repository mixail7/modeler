<UserControl x:Class="ActyvityDiagram_Pal.AD_Object_Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:Controls="clr-namespace:DiagramDesigner.Controls;assembly=DiagramDesigner"
             xmlns:controls="clr-namespace:DiagramDesigner.Controls;assembly=Modeler" mc:Ignorable="d" 
            d:DesignHeight="40" d:DesignWidth="100" x:ClassModifier="internal">
  <Grid>
    <Border Name="MainBorder" BorderBrush="{Binding BorderBrush}" BorderThickness="2" CornerRadius="0" HorizontalAlignment="Stretch">
      <TextBlock Text="{Binding Path=TextValue}" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Border>
    <controls:DragThumb>
    </controls:DragThumb>
  </Grid>
</UserControl>
